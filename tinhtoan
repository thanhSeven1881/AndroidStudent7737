package com.example.myapplication;

import androidx.appcompat.app.AppCompatActivity;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class MainActivity extends AppCompatActivity {
    EditText editTextA,editTextB;
    Button buttonTinh;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);


        //ket noi thanh phan giao dien
        editTextA = (EditText) findViewById(R.id.editTextA);
        editTextB = (EditText) findViewById(R.id.editTextB);
        buttonTinh = (Button)  findViewById(R.id.buttonTinh);

        //xu ly tinh huong click vao
        buttonTinh.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                int a =  Integer.parseInt(editTextA.getText().toString());
                int b =  Integer.parseInt(editTextB.getText().toString());
                int ketqua = a+b ;
                buttonTinh.setText("ket qua= " +ketqua);
            }
        });


    }
}
